<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zihaochen.calculator.Calculator"
    tools:showIn="@layout/activity_calculator"
    android:background="@android:color/holo_green_dark"
    android:padding="0dp">

    <TextView
        android:text="0"
        android:layout_width="fill_parent"
        android:id="@+id/textView"
        android:background="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom|right"
        android:textSize="80sp"
        android:layout_height="210dp" />

    <Button
        android:text="7"
        android:id="@+id/btn7"
        android:background="#585858"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="8"
        android:id="@+id/btn8"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn7"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="9"
        android:id="@+id/btn9"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="4"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="5"
        android:id="@+id/btn5"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="6"
        android:id="@+id/btn6"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="1"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="2"
        android:id="@+id/btn2"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="3"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="C"
        android:id="@+id/btnClear"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickClear"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="0"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btnClear"
        android:layout_toEndOf="@+id/btnClear"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickNumber"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="="
        android:id="@+id/btnEqual"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickEqual"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:text="+"
        android:onClick="onClickOperator"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="-"
        android:id="@+id/btnMinus"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickOperator"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="ร"
        android:id="@+id/btnMult"
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickOperator"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_width="90dp" />

    <Button
        android:text="รท"
        android:id="@+id/btnDiv"
        android:background="#585858"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:onClick="onClickOperator"
        android:fadingEdge="none|horizontal|vertical"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/btnEqual"
        android:layout_toRightOf="@+id/btnEqual"
        android:layout_toEndOf="@+id/btnEqual"
        android:layout_width="90dp" />

</RelativeLayout>
