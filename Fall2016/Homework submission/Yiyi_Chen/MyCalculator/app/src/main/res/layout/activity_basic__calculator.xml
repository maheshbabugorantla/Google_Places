<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Basic_Calculator"
    android:background="@android:color/holo_orange_dark"
    android:clickable="false"
    android:padding="0dp"
    android:id="@+id/yi">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:gravity="bottom|right"
        android:textSize="60dp"
        android:maxLines="2"
        android:maxLength="17" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:textSize="30dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn8"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_margin="0dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btn9"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignTop="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:layout_margin="0dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btn4"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_below="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:layout_margin="0dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btn5"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btn6"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btn1"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btn2"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn3"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/btn0"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnclear"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:text="C"
        android:onClick="onClickClear" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnequal"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn2"
        android:text="="
        android:onClick="onClickEqual" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btndivide"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="/"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnmultiply"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="*"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnplus"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="+"
        android:layout_below="@+id/btnmultiply"
        android:layout_toEndOf="@+id/btn3"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnminus"
        android:padding="0dp"
        android:textSize="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="-"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btnequal"
        android:onClick="onClickOperator" />

</RelativeLayout>
