<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pwd_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Select Search Mode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/review_search_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Search By Date" />

    <Button
        android:id="@+id/review_search_food"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Search By Food" />

    <Button
        android:id="@+id/review_search_meal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Search By Meal Type" />

</LinearLayout>
