<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:orientation="vertical" >

    <FrameLayout 
		android:layout_width="fill_parent"
		android:layout_height="15dp"
		android:background="?attr/background">
	</FrameLayout>
	    		
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="?attr/background"
        android:orientation="vertical"                                           >
	<TextView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="center"
		    android:layout_gravity="center"
		    android:padding="6dp"
		    android:text="Select a Color"
		    android:textColor="#87CEFA" 
		    android:textSize="25sp" />
    </FrameLayout>

    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/lightskyblue">
        
    </FrameLayout>
    
    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="?attr/background">
    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	
	            <FrameLayout 
			        android:layout_width="25dp"
			        android:layout_height="fill_parent"
			        android:background="?attr/background">
	    		</FrameLayout>
	    		
                <Button
		            android:id="@+id/change1"
		            android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:layout_margin="5dp"
		  			
		            android:background="@drawable/cyann"/>
                <Button
		            android:id="@+id/change2"
		            android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:layout_margin="5dp"
					android:background="@drawable/wwhite"/>
                <Button
		            android:id="@+id/change3"
		            android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:layout_margin="5dp"
		            android:background="@drawable/orangee" />

    </LinearLayout>

    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="?attr/background">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
                
        		<FrameLayout 
			        android:layout_width="25dp"
			        android:layout_height="fill_parent"
			        android:background="?attr/background">
	    		</FrameLayout>
	    		
                <Button
		            android:id="@+id/change4"
		            android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:layout_margin="5dp"
		            android:background="@drawable/llightgreen" />
                <Button
            		android:id="@+id/change5"
            		android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:layout_margin="5dp"
            		android:background="@drawable/plum" />
	</LinearLayout>

</LinearLayout>