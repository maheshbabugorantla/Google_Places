<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/code_text"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:gravity="center"
            android:padding="6dp"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="25sp" />

        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/keep_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/keep_button_value"
            android:background="@drawable/btn_grey"
            android:padding="5dp"
            android:text="@string/keep_scan"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/retake_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/keep_button_value"
            android:background="@drawable/btn_grey"
            android:padding="5dp"
            android:text="@string/retake_scan"
            android:textColor="@color/black" />
        
    </FrameLayout>
    


</LinearLayout>