<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:gravity="bottom" >

    <ImageView
        android:id="@+id/reviewPicture"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/aftereat" />

    <TextView
        android:id="@+id/reviewBLD"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:text="BLD"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/crimson"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reviewBLD"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/reviewBLD"
        android:layout_toRightOf="@+id/reviewPicture"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="Status"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/reviewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/status"
        android:layout_toRightOf="@+id/reviewPicture"
        android:paddingLeft="5dp"
        android:text="Time"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
