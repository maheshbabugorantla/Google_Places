<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
	<style name="tab_button_bottom">
	<item name="android:textSize">12sp</item>
	<item name="android:textColor">#ffffffff</item>
	<item name="android:ellipsize">marquee</item>
	<item name="android:gravity">center_horizontal</item>
	<item name="android:background">#000000</item>
	
	<item name="android:button">@null</item>
	<item name="android:paddingTop">6dip</item>
	<item name="android:drawablePadding">4dip</item>
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_weight">1.0</item>
	<item name="android:singleLine">true</item>
	</style>
	
	<style name="activity_title_background">
	<item name="android:background">#000000</item>
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_alignParentTop">true</item>
	<item name="android:gravity">center</item>
	</style>
	
	<style name="activity_title_text">
	<item name="android:textSize">14dip</item>
	<item name="android:textColor">#000111</item>
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:gravity">center</item>
	</style>
	
	<style name="review_buttons">
	<item name="android:textSize">20sp</item>
	<item name="android:textColor">#000000</item>
	<item name="android:gravity">center</item>
	<item name="android:background">#15011070</item>
	<item name="android:button">@null</item>
	<item name="android:paddingTop">6dip</item>
	<item name="android:paddingBottom">6dip</item>
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_weight">1.0</item>
	</style>
	
	<style name="AppTheme_white" parent="AppBaseTheme">
        <item name="background">@color/white</item>
    </style>
    
    <style name="AppTheme_cyan" parent="AppBaseTheme">
        <item name="background">@color/paleturquoise</item>
    </style>
    
    <style name="AppTheme_orange" parent="AppBaseTheme">
        <item name="background">@color/sandybrown</item>
    </style>
    
    <style name="AppTheme_green" parent="AppBaseTheme">
        <item name="background">@color/lightgreen</item>
    </style>
    
    <style name="AppTheme_magenta" parent="AppBaseTheme">
        <item name="background">@color/mediumpurple</item>
    </style>
	
</resources>
