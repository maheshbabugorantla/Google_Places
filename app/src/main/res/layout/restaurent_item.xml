<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center">

    <!-- Used to Display the Star Rating on the Left Side -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1.0"
            android:baselineAligned="false"
            android:textSize="17sp"
            android:id="@+id/rating"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:background="@drawable/circle_black"
            android:textColor="#FFFFFF"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Used to show the name of the business location -->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Puccini's Smiling Teeth Pizza &amp; Pasta"
            android:id="@+id/restaurant_name"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:textSize="19sp" />

    </LinearLayout>

    <!-- Used to show if the business location is open/closed -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/location_closed"
            android:textColor="#f44336"
            android:textAlignment="center"
            android:id="@+id/open_now"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>